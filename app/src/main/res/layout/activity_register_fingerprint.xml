<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nút Quay Lại -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#4296D8"
        android:padding="12dp"
        android:src="@drawable/ic_backbutton" />

    <!-- Tiêu Đề -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_toEndOf="@id/backButton"
        android:layout_alignTop="@id/backButton"
        android:layout_marginStart="8dp"
        android:text="Đăng ký vân tay"
        android:background="#4296D8"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- Mô Tả -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="16dp"
        android:text="Nhấn nút bên dưới để đăng ký vân tay của bạn."
        android:textSize="16sp"
        android:gravity="center" />

    <!-- Nút Đăng Ký -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Đăng ký vân tay"
        android:padding="12dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Ghi Chú -->
    <TextView
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="16dp"
        android:text="Lưu ý: Bạn cần thiết lập vân tay trên thiết bị trước khi sử dụng chức năng này."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>
